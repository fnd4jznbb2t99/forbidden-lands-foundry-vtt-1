<form class="{{cssClass}}" autocomplete="off">
	<div class="monster">
		<div class="bio border">
			<div class="flex row align-center space-between">
				<div class="avatar">
					<img class="profile-img" src="{{img}}" data-edit="img" title="{{name}}" />
				</div>
				<div class="flex column">
					<div class="name bio-row">
						<label>{{localize "BIO.NAME"}}:</label>
						<input name="name" type="text" value="{{name}}" />
					</div>
					<div class="bio-row">
						<div class="movement">
							<label>{{localize system.movement.label}}:</label>
							<input name="system.movement.value" type="number" value="{{system.movement.value}}"
								data-dtype="Number" />
						</div>
						<div class="armor">
							<label><button type="button" class="roll-armor"><i class="fas fa-dice"></i>{{localize
									system.armor.label}}</button>:</label>
							<input name="system.armor.value" type="number" value="{{system.armor.value}}"
								data-dtype="Number" />
						</div>
						<div class="npc-type">
							<label>{{localize "MONSTER.TYPE.LABEL"}}</label>
							<select name="system.type">
								{{#select system.type}}
								<option value="monster">{{localize "MONSTER.TYPE.MONSTER"}}</option>
								<option value="mount">{{localize "MONSTER.TYPE.MOUNT"}}</option>
								{{/select}}
							</select>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="sheet-tabs tabs flex row" data-group="primary">
			<b class="tab-item" data-tab="main">{{localize "TAB.MAIN"}}</b>
			<b class="tab-item" data-tab="combat">{{localize "TAB.COMBAT"}}</b>
			<b class="tab-item" data-tab="gear">{{localize "TAB.GEAR"}}</b>
			<b class="tab-item" data-tab="note">{{localize "TAB.NOTE"}}</b>
		</div>

		<div class="sheet-body">
			<div class="tab" data-group="primary" data-tab="main">
{{> systems/forbidden-lands/templates/actor/character/sheet-tabs/main-tab.hbs}}
			</div>
			<div class="tab" data-group="primary" data-tab="combat">
{{> systems/forbidden-lands/templates/actor/monster/sheet-tabs/combat-tab.hbs}}
			</div>
			<div class="tab" data-group="primary" data-tab="gear">
<!-- prettier-ignore -->
{{! prettier-ignore }}
{{> systems/forbidden-lands/templates/actor/_shared-template-tabs/gear-tab.hbs}}
			</div>
			<div class="tab note" data-group="primary" data-tab="note">
{{editor system.bio.note.value target="system.bio.note.value" button=true owner=owner
editable=true}}
			</div>
		</div>
	</div>
</form>
