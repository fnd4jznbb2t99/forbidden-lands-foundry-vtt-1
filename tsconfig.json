// @ts-nocheck
{
	"compilerOptions": {
		"noEmit": true,
		"module": "Node16",
		"target": "ESNext",
		"moduleResolution": "Node16",
		"allowJs": true,
		"types": [
			"@league-of-foundry-developers/foundry-vtt-types",
			"@types/jquery",
			"@types/showdown"
		],
		"baseUrl": ".",
		"paths": {
			"$*": ["./src/*"],
			"@utils/*": ["./src/utils/*"],
			"@actor/*": ["./src/actor/*"],
			"@item/*": ["./src/item/*"],
			"@journal/*": ["./src/journal/*"],
			"@components/*": ["./src/components/*"],
			"@system/*": ["./src/system/*"]
		}
	},
	"include": ["src/**/*.js"],
	"exclude": ["node_modules/*", "**/node_modules/*", "dist/*"]
}
