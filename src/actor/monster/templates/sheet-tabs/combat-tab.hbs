<div class="flex column full">
	<div class="monster-talents flex column border grow" style="flex: 1 1 auto">
		<h1>
			{{localize "HEADER.TALENT"}}
			/
			{{localize "HEADER.SPELL"}}
		</h1>
		<div class="item-list">
			<div class="header monster-talent flex row">
				<b class="name">
					{{localize "MONSTER.NAME"}}
				</b>
				<b class="description">
					{{localize "MONSTER.DESCRIPTION"}}
				</b>
				<a class="button item-create" title="{{localize 'SHEET.CREATE_TALENT'}}" data-type="talent">
					<i class="fas fa-plus"></i>
				</a>
			</div>
			<div class="items">
				{{#each items as |item|}}
					{{#if (or item.isTalent item.isSpell)}}
						<div class="monster-talent item flex row" data-item-id="{{item._id}}">
							<div class="name">
								<img src="{{item.img}}" width="32px" />
								<div class="name">
									<b>
										{{item.name}}
									</b>
									<div class="talent-description">
										{{{item.system.description}}}
									</div>
								</div>
							</div>
							<div class="button">
								<a class="item-control item-edit" title="Edit Monster Talent">
									<i class="fas fa-edit"></i>
								</a>
								<a class="item-control item-post" title="Post Monster Talent">
									<i class="fas fa-comment"></i>
								</a>
								<a class="item-control item-delete" title="Delete Monster Talent">
									<i class="fas fa-trash"></i>
								</a>
							</div>
						</div>
					{{/if}}
				{{/each}}
			</div>
		</div>
	</div>
	<div class="monster-attacks flex column border grow" style="flex: 1 0 55%">
		<h1>
			<button type="button" id="monster-attack-btn">
				<i class="fas fa-dice"></i>{{localize "HEADER.ATTACK"}}
			</button>
		</h1>
		<div class="item-list">
			<div class="header monster-attack flex row">
				<b class="name">
					<i class="fas fa-dice"></i>
					&nbsp;{{localize "MONSTER.NAME"}}
				</b>
				<a class="button item-create" title="{{localize 'SHEET.CREATE_M_ATTACK'}}" data-type="monsterAttack">
					<i class="fas fa-plus"></i>
				</a>
			</div>
			<ol class="items">
				{{#each items as |item|}}
					{{#if (or item.isMonsterAttack (and item.isWeapon item.isEquipped))}}
						<li class="item monster-attack flex row" data-item-id="{{item._id}}">
							<div class="name">
								<img src="{{item.img}}" width="32px" />
								<div class="name">
									<button type="button" class="roll-attack" data-item-id="{{item._id}}">
										{{item.name}}
									</button>
									{{{item.system.description}}}
								</div>
							</div>
							<div class="button">
								<a class="item-control item-edit" title="Edit Monster Attack">
									<i class="fas fa-edit"></i>
								</a>
								<a class="item-control item-post" title="Post Monster Attack">
									<i class="fas fa-comment"></i>
								</a>
								<a class="item-control item-delete" title="Delete Monster Attack">
									<i class="fas fa-trash"></i>
								</a>
							</div>
						</li>
					{{/if}}
				{{/each}}
			</ol>
		</div>
	</div>
</div>