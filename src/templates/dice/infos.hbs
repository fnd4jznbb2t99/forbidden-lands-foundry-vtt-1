<div class="dice-infos">
	{{#if (eq roll.type "spell")}}
		{{log roll}}
		{{#if (or roll.baneCount roll.options.chance)}}
			<div class="dice-info">
				<span class="result">
					{{#unless roll.options.chance}}
						{{localize "ROLL.MISHAP"}}
					{{else}}
						{{localize "ROLL.CHANCE"}}
					{{/unless}}
				</span>
			</div>
		{{/if}}
	{{/if}}
	{{#if roll.pushed}}
		{{#if roll.attributeTrauma}}
			<div class="dice-info">
				<span class="result">
					{{roll.attributeTrauma}}
				</span>
				<span class="label">
					&nbsp;{{localize "ROLL.APPLIED_TRAUMA"}}&nbsp;{{localize attributeLabel}}
				</span>
			</div>
		{{/if}}

		{{#if roll.gearDamage}}
			<div class="dice-info">
				<span class="result">
					{{roll.gearDamage}}
				</span>
				<span class="label">
					&nbsp;{{localize "ROLL.APPLIED_TRAUMA"}}&nbsp;{{localize gearLabel}}
				</span>
			</div>
		{{/if}}
	{{/if}}
</div>
